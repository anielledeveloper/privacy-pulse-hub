{
  "manifest_version": 3,
  "name": "PrivacyPulse Hub",
  "version": "1.0.0",
  "description": "Track and monitor team guideline adherence with customizable scheduling and progress tracking",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Team Guideline Pulse",
    "default_icon": "icons/icon48.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "homepage_url": "http://localhost:3000",
  "author": "Your Name or Organization"
}
